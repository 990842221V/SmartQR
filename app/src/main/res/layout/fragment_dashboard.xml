<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="0dp"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:titleTextColor="@color/text_primary"
            app:contentInsetStart="0dp">


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Statistics Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_statistics"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Statistics Cards Grid -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="2"
                app:rowCount="2"
                app:alignmentMode="alignMargins"
                app:columnOrderPreserved="false"
                android:padding="4dp">

                <!-- Card 1: Issued Tickets -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/card_blue"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:layout_column="0"
                    app:layout_row="0">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_issued"
                            android:contentDescription="@string/scanned_tickets"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/issued_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="128"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/issued_tickets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="@string/issued_tickets"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 2: Scanned Tickets -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/card_green"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:layout_column="1"
                    app:layout_row="0">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_scanned"
                            android:contentDescription="@string/scanned_tickets"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/scanned_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="98"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/scanned_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="@string/scanned_tickets"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 3: Paid Tickets -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/card_purple"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:layout_column="0"
                    app:layout_row="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_paid"
                            android:contentDescription="@string/paid_tickets"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/paid_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="85"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/paid_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="@string/paid_tickets"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 4: Unpaid Tickets -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/card_orange"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:layout_column="1"
                    app:layout_row="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_unpaid"
                            android:contentDescription="@string/unpaid_tickets"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/unpaid_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="43"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/unpaid_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="@string/unpaid_tickets"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </androidx.gridlayout.widget.GridLayout>



            <!-- Recent Activity List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_create_qr"
        android:contentDescription="@string/create_qr"
        app:backgroundTint="@color/primary"
        app:tint="@android:color/white"
        app:elevation="8dp"
        app:rippleColor="@color/primary_dark"
        app:maxImageSize="28dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scan_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_scan_qr"
        android:contentDescription="@string/scan_qr"
        app:backgroundTint="@color/secondary"
        app:tint="@android:color/white"
        app:elevation="8dp"
        app:rippleColor="@color/secondary_dark"
        app:maxImageSize="28dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>